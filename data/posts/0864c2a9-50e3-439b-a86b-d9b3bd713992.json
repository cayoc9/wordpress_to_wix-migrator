                    },
                    {
                        "type": "TEXT",
                        "id": "",
                        "nodes": [],
                        "textData": {
                            "text": "Declaração de Imposto de Renda: O Que Você Precisa Saber",
                            "decorations": [
                                {
                                    "type": "BOLD",
                                    "fontWeightValue": 700
                                },
                                {
