                    },
                    {
                        "type": "TEXT",
                        "id": "",
                        "nodes": [],
                        "textData": {
                            "text": "A Diferença Entre Declarar e Pagar Imposto",
                            "decorations": [
                                {
                                    "type": "BOLD",
                                    "fontWeightValue": 700
                                },
                                {
                                    "type": "ITALIC",
                                    "italicData": true
