                    },
                    {
                        "type": "TEXT",
                        "id": "",
                        "nodes": [],
                        "textData": {
                            "text": "Microempreendedores Individuais (MEI) e Imposto de Renda",
                            "decorations": [
                                {
                                    "type": "BOLD",
                                    "fontWeightValue": 700
                                },
                                {
                                    "type": "ITALIC",
                                    "italicData": true
                                }
                            ]
                        }
                    }
                ],
                "style": {
                    "paddingBottom": "2px"
                },
                "headingData": {
